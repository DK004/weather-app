<!doctype html>
<html lang="en">

<head>
   {{>headerlinks}}
    <title>weatherApp</title>
</head>

<body>

{{>navbar}}


    <!-- main content -->

    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <div class="col-md-6 col-12 main_left">
                        <p>Welcome to Weather App</p>
                        <h1>
                            Get The Latest <span id="wInfo">Weather Information</span> of you City.
                        </h1>
                        <a href="/weather">
                        <button class="btn btn-default but">Get Started</button>
                        </a>
                    </div>

                    <div class="col-md-6 col-12 main_right">
                        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                              <div class="carousel-item active">
                                <img src="img/intro.jpg" class="d-block w-100" alt="illustration">
                              </div>
                              <div class="carousel-item">
                                <img src="img/img (1).jpg" class="d-block w-100" alt="illustration">
                              </div>
                              <div class="carousel-item">
                                <img src="img/img (2).jpg" class="d-block w-100" alt="illustration">
                              </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                              <span class="carousel-control-next-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Next</span>
                            </button>
                          </div>

                    </div>
                </div>




            </div>
        </div>
    </div>








