<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
    <title>Weather-App</title>
</head>

<body>

    {{>navbar}}


    <div class="container">
        <div class="row">
            <div class="col-md-6 col-10 mx-auto">
                <div class="main_content">
                    <div class="input-group mb-3 temp_form">
                        <input type="text" class="form-control" id="cityName" placeholder="Enter your City Name">
                        <button class="btn btn-default" style="background-color: var(--main-color);color:white;" type="submit" id="submitBtn" data-bs-toggle="tooltip"
                            title="Search" data-bs-placement="bottom"> <i class="fa fa-search"
                                aria-hidden="true"></i></button>
                    </div>
                </div>

                <div class="tempInfo">
                    <div class="card text-white bg-dark mb-3" style="max-width: 30rem;">
                        <div class="card-header dayDate">
                            <p id="day"></p>
                            <p id="today_date"></p>
                        </div>
                        <div class="card-body">
                            <p id="temp_status" class="text-center"></p>
                            <h5 class="card-title" ><span id="temp">0</span> <span style="color: var(--main-color);"> &deg; </span>  C</h5>
                            <p class="card-text" id="city_name_show">City, COUNTRY</p>
                        </div>
                    </div>
                
                </div>
            </div>
        </div>
    </div>











    {{>footer}}

<script src="js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"></script>
</body>

</html>